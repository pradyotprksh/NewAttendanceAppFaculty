            android:name=".SelectSemesterClassSeeNotes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FacultySeeNotes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.application.pradyotprakash.newattendanceappfaculty.pushnotification.TARGET" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UploadEvents"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SeeEvents"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EachEventInformation"
            android:screenOrientation="portrait" />
