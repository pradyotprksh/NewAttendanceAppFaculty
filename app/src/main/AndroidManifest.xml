            android:name=".SelectSemesterClassTimetable"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentAttendanceList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentStatus"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectSemesterClassProctor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProctorStudentList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentDetailsProctor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EachSubjectStudentDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EachSubjectStudentMarks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EachSubjectStudentInternalMarks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EachSubjectStudentExternalMarks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UploadNotes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectSemesterClassNotes"
